---
interface Props {
  data: string;
  label: string;
}

const { data, label } = Astro.props;
---

<div
  class="flex flex-col items-center hover:text-amber-400 dark:hover:text-amber-500 hover:scale-105 transition-transform hover:ease-in-out hover:transition-150 hover:text-shadow"
>
  <h1 class="text-2xl sm:text-4xl font-bold">{data}</h1>
  <p>{label}</p>
</div>
